{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.3.3",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "__MSG_extensionTitle__",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://api.twitch.tv/*",
    "https://id.twitch.tv/*",
    "https://www.twitch.tv/*",
    "https://gql.twitch.tv/*",
    "https://translate.googleapis.com/*",
    "https://api-edge.cognitive.microsofttranslator.com/*",
    "https://edge.microsoft.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js", "chatters-count.js", "auto-bonus.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["authorization-success.html", "authorization-success.js", "chatters-count.page.js"],
      "matches": ["https://www.twitch.tv/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.twitch.tv https://id.twitch.tv https://gql.twitch.tv https://translate.googleapis.com https://api-edge.cognitive.microsofttranslator.com https://edge.microsoft.com; frame-ancestors 'none'; base-uri 'self';"
  }
}


